<%- include('../partials/header.ejs')%>
<main>
    <div class="form-grid">
        <div class="form-info">
            <h2>Edit This Item</h2>
            <p>Make any changes that you would like</p>
        </div>
        <div class="form-content">
            <form method="POST" action="/items/<%= item.id%>?_method=PUT" enctype="multipart/form-data" class="item-form">
                <fieldset>
                    <label for="title">Title: <input type="text" id="title" name="title" value="<%= item.title%>" required></label>
                    <label for="condition">Condition: 
                        <select name="condition" id="condition" required>
                            <option value="" disabled>(Please Select a Condition)</option>
                            <option value="New" <%if(item.condition == "New") {%>selected<%}%>>New</option>
                            <option value="Lightly Used" <%if(item.condition == "Lightly Used") {%>selected<%}%>>Lightly Used</option>
                            <option value="Used" <%if(item.condition == "Used") {%>selected<%}%>>Used</option>
                            <option value="Very Used" <%if(item.condition == "Very Used") {%>selected<%}%>>Very Used</option>
                            <option value="Extremely Used" <%if(item.condition == "Extremely Used") {%>selected<%}%>>Extremely Used</option>
                        </select>
                    </label>
                </fieldset>
                <fieldset>
                    <label for="price">Price: $<input id="price" name="price" type="number" min="0.00" step="0.01" value="<%= item.price%>" required></label>
                </fieldset>
                <fieldset>
                    <label for="details"> Details: <textarea id="details" name="details" rows="5" cols="33" required><%= item.details%></textarea></label>
                </fieldset>
                <fieldset>
                    <label for="image">Image: <input id="image" name="image" type="file" accept="image/*" value="<%= item.image%>" required></label>
                </fieldset>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs')%>