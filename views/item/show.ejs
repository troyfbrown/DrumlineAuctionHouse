<%- include('../partials/header.ejs')%>
            <main>
                <div class="item-grid">
                    <div class="item-picture">
                        <img src="<%= item.image%>">
                    </div>
                    <div class="item-description">
                        <h3><%= item.title%></h3>
                        <label><span class="bold">Condition:</span> <%= item.condition%></label>
                        <br>
                        <label><span class="bold">Price:</span> $<%= item.price%> || <%= item.totalOffers %> offers</label>
                        <br>
                        <label><span class="bold">Seller:</span> <em><%= item.seller.firstName + ' ' + item.seller.lastName%></em></label>
                        <br>
                        <label><span class="bold">Details:</span> <em><%= item.details%></em></label>
                        <%if(item.active) {%>
                            <form method="POST" action="/items/<%= item.id%>/offer">
                                <input for="amount" id="amount" name="amount" type="number" min="0.00" step="0.01" required>
                                <input type="submit" value="Make an Offer">
                            </form>
                            <%if(item.totalOffers > 0) {%>
                                <label>Current Highest Offer: $<%= item.highestOffer %></label>
                            <%} else {%>
                                <label>There are no current offers on this item</label>
                            <%}%>
                        <%} else {%>
                            <label>This item is no longer active</label>
                        <%}%>
                    </div>
                </div>
            </main>
<%- include('../partials/footer.ejs')%>